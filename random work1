#include <iostream>
#include <math.h>

using namespace std;

int main() {

	const int N = 10;
	int M[N];

	for (int i = 0; i < N; i++)
	{
		cout << "enter array element M[" << i << "] = ";
		cin >> M[i];
	}

	double xi[N], p[N], Mxi = 0;
	int i;

	cout << "xi: ";
	for (i = 0; i < 1; i++) {
		cin >> xi[i];
	}

	cout << "p: ";
	for (i = 0; i < 1; i++) {
		cin >> p[i];
		Mxi += p[i] * xi[i];
	}

	cout << "Mxi = " << Mxi << endl;
}
